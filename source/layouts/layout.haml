!!!5
%html{ lang: 'en'}
  %head
    / Global site tag (gtag.js) - Google Analytics
    %script{:async => "", :src => "https://www.googletagmanager.com/gtag/js?id=UA-137924462-1"}
    :javascript
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'UA-137924462-1');
    %meta{ charset: 'utf-8' }
    %meta{ content: 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible' }
    %title Korny's Blog
    %meta{ content: '', name: 'description' }
    %meta{ content: 'width=device-width, initial-scale=1.0', name: 'viewport' }
    %link{:rel => 'icon', :href => '/favicon.ico', :type => 'image/ico'}
    %link{:rel => 'shortcut', :href => '/favicon.ico', :type => 'image/ico'}
    %link{:rel => 'alternate', :type => 'application/atom+xml', :href=> 'http://blog.korny.info/feed.xml'}
    %link{:rel => 'alternate', :type => 'application/atom+xml', :href=> 'http://blog.korny.info/clojure-feed.xml'}
    %link{:href => 'http://fonts.googleapis.com/css?family=Cousine:400,700,400italic,700italic&subset=latin,latin-ext', :rel => 'stylesheet', :type => 'text/css'}
    %link{:href => 'http://fonts.googleapis.com/css?family=Vollkorn:400italic,700italic,400,700', :rel => 'stylesheet', :type => 'text/css'}
    -#%link{:href => 'http://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic', :rel => 'stylesheet', :type => 'text/css'}
    -#%link{:href => 'http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic', :rel => 'stylesheet', :type => 'text/css'}
    %link{:href => 'http://fonts.googleapis.com/css?family=Playfair+Display:400,700,900,400italic,700italic,900italic', :type => 'text/css'}
    = stylesheet_link_tag 'site'
  %body
    /[if lt IE 9] <p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p>
    %section.container
      %header
        %h1
          %a{:href => "http://blog.korny.info"} Korny's Blog
      %section.blog
        .main{ role: 'main' }= yield

        %aside
          %h2 About Me
          %p
            Korny (full name Kornelis Sietsma) is an Australian software developer currently working
            for ThoughtWorks in the UK.  More info at
            %a{:href => "http://korny.info"}
              https://korny.info
            or
            %a{:href => "https://twitter.com/kornys"}
              kornys on twitter
          %h2 Recent Articles
          %ol
            - blog.articles[0...10].each do |article|
              %li
                = link_to article.title, article
                %span= article.date.strftime('%b %e')
          %h2 Tags
          %ol
            - blog.tags.each do |tag, articles|
              %li
                = link_to tag, tag_path(tag)
                (#{articles.size})
      %footer
        %p
          Copyright
          %a{:href => "http://korny.info"} Kornelis Sietsma
          2013-2020

    = javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js'
    :javascript
      window.jQuery || document.write('<script src="javascripts/vendor/jquery-1.9.1.min.js"><\/script>')
    = javascript_include_tag 'site'

